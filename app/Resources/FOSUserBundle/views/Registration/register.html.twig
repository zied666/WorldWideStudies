{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h2>
            </div>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            {% trans_default_domain 'FOSUserBundle' %}
            <div class="row">
                <div id="main" class="col-sms-6 col-sm-8 col-md-12">
                    <div class="booking-section travelo-box">
                        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                            <h2>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h2>
                            {{ form_widget(form._token) }}
                            <div class="row">
                                {{ formulaire.input("col-md-4","First Name",form.firstName,true) }}
                                {{ formulaire.input("col-md-4","Last Name",form.lastName,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-4","Phone",form.phone,true) }}
                                {{ formulaire.input("col-md-8","Address",form.address,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-4","Username",form.username,true) }}
                                {{ formulaire.input("col-md-4","Email",form.email,true) }}
                            </div>
                            <div class="row">
                                {{ formulaire.input("col-md-4","",form.plainPassword,true) }}
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <button type="submit" id="_submit" name="_submit" class="full-width btn-large">{{ 'registration.submit'|trans }}</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}
