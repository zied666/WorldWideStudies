{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</h2>
            </div>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sms-6 col-sm-8 col-md-12">
                    <div class="booking-section travelo-box">
                        {% if error %}
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-error">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                        <span class="close"></span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <h2>{{ 'layout.login'|trans({}, 'FOSUserBundle') }} </h2>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <label>{{ 'security.login.username'|trans }}</label>
                                    <input type="text" class="input-text full-width"  id="username" name="_username" value="{{ last_username }}" required="required" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <label>{{ 'security.login.password'|trans }}</label>
                                    <input type="password" class="input-text full-width" id="password" name="_password" required="required" />
                                </div>
                                <div class="col-md-4" style="  padding-top: 31px;">
                                    <a href="{{ path('fos_user_resetting_request') }}">Forgotten password? </a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                                    </label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 col-md-5">
                                    <button type="submit" id="_submit" name="_submit" class="full-width btn-large">{{ 'security.login.submit'|trans }}</button>
                                </div>
                                <div class="col-sm-6 col-md-5">
                                    <a href="{{ path('fos_user_registration_register') }}" class="button btn-large sky-blue1">{{ 'registration.submit'|trans }}</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}
