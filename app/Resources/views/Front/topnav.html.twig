<div class="topnav hidden-xs">
    <div class="container">
        <ul class="quick-menu pull-left">
            <li class="ribbon">
                <a href="javascript:void(0)">
                    {% if app.request.getLocale()=='fr' %}
                        Français
                    {% endif %}
                    {% if app.request.getLocale()=='en' %}
                        English
                    {% endif %}
                </a>
                <ul class="menu mini">
                    <li {% if app.request.getLocale()=='en' %}class="active"{% endif %}><a href="{{ path('change_locale',{'locale':'en'}) }}">English</a></li>
                    <li {% if app.request.getLocale()=='fr' %}class="active"{% endif %}><a href="{{ path('change_locale',{'locale':'fr'}) }}">Français</a></li>
                </ul>
            </li>
            {{ render(controller('FrontGeneralBundle:Front:currency')) }}
        </ul>
        <ul class="quick-menu pull-right">
            {% if not is_granted('ROLE_USER') %}
                <li><a href="{{ path('fos_user_security_login') }}">LOGIN</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}">SIGNUP</a></li>
                {% else %}
                <li class="ribbon currency">
                    <a href="javascript:void(0)">{{ app.user.username }}</a>
                    <ul class="menu mini">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a target="_blank" href="{{ path('dashboard') }}">Back Office</a></li>
                            {% endif %}
                        <li><a href="{{ path('fos_user_profile_edit') }}">Edit profile</a></li>
                        <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    </ul>
                </li>
            {% endif %}
        </ul>
    </div>
</div>