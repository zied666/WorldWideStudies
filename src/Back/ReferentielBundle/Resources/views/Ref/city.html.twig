{% extends ":Back:base.html.twig" %}
{% block title %}Cities{% endblock %}
{% block body %}
    <div class="container-fluid container-fullw bg-white">
        <div class="row">
            <div class="col-md-12">
                <form action="{{ path('city',{'id':city.id}) }}" method="post" role="form" id="form">
                    {{ form_widget(form._token) }}
                    <div class="row">
                        {{ formulaire.input("col-md-3","Country",form.country,true) }}
                        {{ formulaire.input("col-md-3","Name",form.libelle,true) }}
                    </div>
                    {{ macro.enregistrer }}
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h5 class="over-title margin-bottom-15"><span class="text-bold">List</span></h5>
                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th>Country</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for city in citys %}
                            <tr>
                                <td>{{ city.country }}</td>
                                <td>{{ city.libelle }}</td>
                                <td>
                                    {{ macro.edit(path('city',{'id':city.id})) }}
                                    {{ macro.delete(path('delete_city',{'id':city.id})) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}