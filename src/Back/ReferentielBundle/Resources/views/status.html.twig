{% extends ":Back:base.html.twig" %}
{% block title %}Status{% endblock %}
{% block body %}
    <div class="container-fluid container-fullw bg-white">
        <div class="row">
            <div class="col-md-12">
                {{ form_start(form) }}
                <div class="row">
                    {{ formulaire.input("col-md-3","Status",form.name,true) }}
                </div>
                {{ macro.enregistrer }}
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h5 class="over-title margin-bottom-15"><span class="text-bold">List</span></h5>
                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th  class="center">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for statu in status %}
                            <tr>
                                <td class="center">{{ statu.name }}</td>
                                <td class="center">
                                    {{ macro.edit(path('status',{'id':statu.id})) }}
                                    {{ macro.delete(path('delete_status',{'id':statu.id})) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}