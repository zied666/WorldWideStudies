{% extends ":Back:base.html.twig" %}
{% block title %}List of languages course booking{% endblock %}
{% block body %}
    <div class="container-fluid container-fullw bg-white">
        <div class="row">
            <div class="col-md-12">
                <h5 class="over-title margin-bottom-15"><span class="text-bold">List</span></h5>
                <table class="table table-striped table-bordered table-hover table-full-width" id="">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Booking Date</th>
                            <th>Client</th>
                            <th>Course</th>
                            <th>Accommodation</th>
                            <th>Extras</th>
                            <th>Total</th>
                            <th>Payment Status</th>
                            <th>Last status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for booking in bookings %}
                            <tr>
                                <td>{{ booking.id }}</td>
                                <td>{{ booking.bookingDate|date('d F Y H:i') }}</td>
                                <td><a data-id="{{ booking.client.id }}" class="client" data-toggle="modal" data-target=".bs-example-modal-lg">{{ booking.client}}</a></td>
                                <td><a data-id="{{ booking.id }}" class="course" data-toggle="modal" data-target=".bs-example-modal-lg">{{ booking.course }}</a></td>
                                <td>
                                    {% if booking.room is not null %}
                                        <a data-id="{{ booking.id }}" class="accommodation" data-toggle="modal" data-target=".bs-example-modal-lg">{{ booking.room }}</a>
                                    {% endif %}
                                </td>
                                <td><a data-id="{{ booking.id }}" class="extras" data-toggle="modal" data-target=".bs-example-modal-lg">{{ booking.extras|length }}</a></td>
                                <td>{{ booking.total }} {{ booking.currency.code }}</td>
                                <td>
                                    {% if booking.status==2 %}
                                        <a data-toggle="modal" data-id="{{ booking.id }}" class="paypal" data-target=".bs-example-modal-lg">{{ booking.showStatus }}</a>
                                    {% else %}
                                        {{ booking.showStatus }}
                                    {% endif %}
                                </td>
                                <td>{{ booking.showLastStatus()}}</td>
                                <td class="center">
                                    <a data-id="{{ booking.id }}" data-toggle="modal" data-target=".Modal-add-Stats" class="btn btn-transparent btn-xs add-new-status"><i class="fa fa-plus"></i></a>
                                    <a data-id="{{ booking.id }}" data-toggle="modal" data-target=".bs-example-modal-lg" class="btn btn-transparent btn-xs showStatus"><i class="fa fa-server"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(bookings) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade bs-example-modal-lg"  tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title center" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table  table-full-width" id="sample_1">
                                <tbody id="tbodyTable"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade Modal-add-Stats"  tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title center">Add status</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(form) }}
                    <div class="row">
                        {{ formulaire.select2("col-md-6","Status",form.status,true) }}
                    </div>
                    <div class="row">
                        {{ formulaire.input("col-md-12","Observation",form.observation,true) }}
                    </div>
                    <div class="no-display">
                        {{ formulaire.input("col-md-2","",form.bookingLanguageCourse,true) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary btn-o" data-dismiss="modal">
                            Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                            Save changes
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block jquery %}
    <script>
        $(document).ready(function () {
            $('.add-new-status').click(function () {
                var id = $(this).data('id');
                $('#back_bookingbundle_status_bookingLanguageCourse').val(id);
            })
            $('.paypal').click(function () {
                var id = $(this).data('id');
                $('#myModalLabel').html('Loading ...');
                $('#tbodyTable').html('');
                $.ajax({
                    url: '{{ path('back_ajax_get_paypal_information') }}',
                    data: {'id': id},
                    type: 'POST',
                    dataType: 'json',
                    success: function (json) {
                        $('#myModalLabel').html(json['title']);
                        $.each(json['data'], function (index, value) {
                            $('#tbodyTable').append('<tr><td>' + index + '</td><td>' + value + '</td></tr>');
                        });
                    }
                });
            })
            $('.client').click(function () {
