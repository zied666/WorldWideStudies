{% extends ":Back:base.html.twig" %}
{% block title %} Dashboard {% endblock %}
{% block body %}
    <div class="container-fluid container-fullw bg-white">
        <div class="row">
            <div class="col-sm-3 links cl-effect-13">
                <div class="panel panel-white no-radius text-center">
                    <a href="{{ path('list_school') }}">
                        <div class="panel-body">
                            <span class="fa-stack fa-2x"> <i class="fa fa-square fa-stack-2x text-primary"></i> <i class="fa fa-home fa-stack-1x fa-inverse"></i> </span>
                            <h3 class="StepTitle">Schools location ({{ countSchoolLocations }})</h3>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm-3 links cl-effect-13">
                <div class="panel panel-white no-radius text-center">
                    <a href="{{ path('list_accommodation') }}">
                        <div class="panel-body">
                            <span class="fa-stack fa-2x"> <i class="fa fa-square fa-stack-2x text-primary"></i> <i class="fa fa-hotel fa-stack-1x fa-inverse"></i> </span>
                            <h3 class="StepTitle">Accommodations ({{ countAccommodations }}) </h3>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm-3 links cl-effect-13">
                <div class="panel panel-white no-radius text-center">
                    <a href="{{ path('list_university') }}">
                        <div class="panel-body">
                            <span class="fa-stack fa-2x"> <i class="fa fa-square fa-stack-2x text-primary"></i> <i class="fa fa-pencil fa-stack-1x fa-inverse"></i> </span>
                            <h3 class="StepTitle">Universities ({{ countUniversitys }}) </h3>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm-3 links cl-effect-13">
                <div class="panel panel-white no-radius text-center">
                    <a href="{{ path('administrator') }}">
                        <div class="panel-body">
                            <span class="fa-stack fa-2x"> <i class="fa fa-square fa-stack-2x text-primary"></i> <i class="fa fa-group fa-stack-1x fa-inverse"></i> </span>
                            <h3 class="StepTitle">Administrators ({{ countAdmins }}) </h3>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}