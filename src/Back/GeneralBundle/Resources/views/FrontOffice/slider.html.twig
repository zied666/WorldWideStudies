{% extends ":Back:base.html.twig" %}
{% block title %}Slider{% endblock %}
{% block body %}
    <div class="container-fluid container-fullw bg-white">
        <div class="row">
            <div class="col-md-12">
                {{ form_start(form) }}
                <div class="row">
                    {{ formulaire.input("col-md-2","Photo",form.image.file,true) }}
                    {{ formulaire.input("col-md-2","Order",form.ordre,true) }}
                </div>
                <div class="no-display">
                    {{ formulaire.input("col-md-2","Photo",form.image.updateAt,true) }}
                </div>
                {{ macro.enregistrer }}
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h5 class="over-title margin-bottom-15"><span class="text-bold">List</span></h5>
                <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                    <thead>
                        <tr>
                            <th class="center">Photo</th>
                            <th class="center">Ordre</th>
                            <th class="center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for slider in sliders %}
                            <tr>
                                <td class="center">
                                    <img class="img-rounded"  src="{{ slider.image.getAssetPath | imagine_filter('small') }}" />
                                </td>
                                <td class="center">{{ slider.ordre }}</td>
                                <td class="center">
                                    {{ macro.edit(path('backoffice_slider',{'id':slider.id})) }}
                                    {{ macro.delete(path('backoffice_slider_delete',{'id':slider.id})) }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}