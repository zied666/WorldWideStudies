{% extends ":Front:base.html.twig" %}
{% block title %}Thank You{% endblock %}
{% block body %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Thank You</h2>
            </div>
        </div>
    </div>

    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div id="main" class="col-sm-8 col-md-9">
                    <div class="booking-information travelo-box">
                        <h2>Booking Confirmation</h2>
                        <hr />
                        <div class="booking-confirmation clearfix">
                            <i class="soap-icon-recommend icon circle"></i>
                            <div class="message">
                                <h4 class="main-message">Thank You. Your Booking Order is Confirmed Now.</h4>
                                {#                                <p>A confirmation email has been sent to your provided email address.</p>#}
                            </div>
                            {#                            <a href="#" class="button btn-small print-button uppercase">print Details</a>#}
                        </div>
                        <hr />
                        <dl class="term-description">
                            {{ GetReview()|raw }}
                        </dl>
                    </div>
                </div>
                <div class="sidebar col-sm-4 col-md-3">
                    <div class="booking-details travelo-box">
                        <h4>Booking Details</h4>
                        <article class="image-box hotel listing-style1">
                            <figure class="clearfix">
                                <a href="javascript:void(0)" class="hover-effect middle-block">
                                    <img class="middle-item" src="{{ school.image.getAssetPath | imagine_filter('minature_front') }}" style="width: 70px;height: 70px">
                                </a>
                                <div class="travel-title">
                                    <h5 class="box-title">{{ school }}
                                        <small style="color: red">{{ school.showType}}</small>
                                        <small>{{ school.city.country|upper }} {{ school.city }}</small>
                                    </h5>
                                </div>
                            </figure>
                            <div class="details">
                                <div class="feedback">
                                    <div data-placement="bottom" data-toggle="tooltip" class="five-stars-container"><span style="width: {{ (school.stars/5) *100 }}%;" class="five-stars"></span></div>
                                    <span class="review">{{ school.reviews }} reviews</span>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}