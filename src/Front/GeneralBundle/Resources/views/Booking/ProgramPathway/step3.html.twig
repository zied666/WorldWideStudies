{% extends ":Front:base.html.twig" %}
{% block title %}Step 3{% endblock %}
{% block body %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Step 3</h2>
            </div>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="tab-container style1">
                        <ul class="tabs full-width">
                            <li><a href="{{ path('front_program_pathway_step1') }}" >Step 1</a></li>
                            <li><a href="{{ path('front_program_pathway_step2') }}" >Step 2</a></li>
                            <li class="active"><a href="javascript:void(0)" data-toggle="tab">Step 3</a></li>
                            <li><p class="StepBlock">Step 4</p></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active">
                                {{ form_start(form) }}
                                <div class="person-information">
                                    <h2>These details are always required for visas and often by the university too.</h2>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-12","Tick Your primary source of funding",form.sourceFunding,true) }}
                                    </div>
                                </div>
                                <div class="person-information">
                                    <h2>Address</h2>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-6","Address line 1",form.addressLine1,true) }}
                                        {{ formulaire.input("col-md-6","Address line 2",form.addressLine2,false) }}
                                    </div> 
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-3","City",form.city,true) }}
                                        {{ formulaire.input("col-md-3","State / Province / Region",form.region,false) }}
                                        {{ formulaire.input("col-md-3","Postal / Zip code",form.postal,false) }}
                                        {{ formulaire.input("col-md-3","Country",form.country,true) }}
                                    </div> 
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-12","Do you currently live at this address?",form.currently,true) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <button type="submit" class="full-width btn-large">Step 4</button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                        </di
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .StepBlock
        {
            height: 30px;
            line-height: 30px;
            background: #f5f5f5;
            padding: 0 18px;
            color: #9e9e9e;
            font-size: 0.9167em;
            font-weight: bold;
            text-align: center;
            margin: 0px;
            text-transform: uppercase;
        }
    </style>
{% endblock %}
{% block jquery %}
    <script>
        tjq(document).ready(function () {
            tjq("#front_generalbundle_formstep3_englishTest_1").change(function () {
                if (!tjq('#blockTest').hasClass('no-display'))
                    tjq('#blockTest').addClass('no-display');
            })
            tjq("#front_generalbundle_formstep3_englishTest_0").change(function () {
                if (tjq('#blockTest').hasClass('no-display'))
                    tjq('#blockTest').removeClass('no-display');
            })
            tjq("#front_generalbundle_formstep3_universityDegree_0").change(function () {
                if (tjq('#blockYesNo').hasClass('no-display'))
                    tjq('#blockYesNo').removeClass('no-display');
                if (tjq('#blockYes').hasClass('no-display'))
                    tjq('#blockYes').removeClass('no-display');
                if (!tjq('#blockNo').hasClass('no-display'))
                    tjq('#blockNo').addClass('no-display');
            })
            tjq("#front_generalbundle_formstep3_universityDegree_1").change(function () {
                if (tjq('#blockYesNo').hasClass('no-display'))
                    tjq('#blockYesNo').removeClass('no-display');
                if (tjq('#blockNo').hasClass('no-display'))
                    tjq('#blockNo').removeClass('no-display');
                if (!tjq('#blockYes').hasClass('no-display'))
                    tjq('#blockYes').addClass('no-display');
            })
        })
    </script>
{% endblock %}