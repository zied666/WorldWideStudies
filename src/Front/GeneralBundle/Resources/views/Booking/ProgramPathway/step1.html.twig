{% extends ":Front:base.html.twig" %}
{% block title %}Step 1{% endblock %}
{% block body %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Step 1</h2>
            </div>
        </div>
    </div>

    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="tab-container style1">
                        <ul class="tabs full-width">
                            <li class="active"><a href="javascript:void(0)" data-toggle="tab">Step 1</a></li>
                            <li><p class="StepBlock">Step 2</p></li>
                            <li><p class="StepBlock">Step 3</p></li>
                            <li><p class="StepBlock">Step 4</p></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active">
                                {{ form_start(form) }}

                                <div class="person-information">
                                    <h2>Personal Information</h2>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-3","First name(s)*",form.firstName,true) }}
                                        {{ formulaire.input("col-md-3","Family name(s)*",form.lastName,true) }}
                                        {{ formulaire.input("col-md-3","Gender*",form.gender,true) }}
                                    </div>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-3","Your date of Birth*",form.birthDate,true) }}
                                        {{ formulaire.input("col-md-3","Nationality*",form.natianality,true) }}
                                        {{ formulaire.input("col-md-3","Email*",form.email,true) }}
                                    </div>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-3","Primary phone number*",form.primaryPhone,true) }}
                                        {{ formulaire.input("col-md-3","Alternative phone number",form.alternativePhone,true) }}
                                    </div>
                                </div>
                                <div class="person-information">
                                    <h2>Course and degree</h2>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-4","Level of study*",form.levelOfStudy,true) }}
                                        {{ formulaire.input("col-md-4","Subject of interest*",form.subject,true) }}
                                    </div>
                                    <div class="form-group row">
                                        {{ formulaire.input("col-md-4","Preferred intake*",form.preferredIntake,true) }}
                                        {{ formulaire.input("col-md-4","Progression University degree",form.progressionUniversityDegree,true) }}
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-sm-6 col-md-5">
                                        <button type="submit" class="full-width btn-large">Step 2</button>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                        </di
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .StepBlock
        {
            height: 30px;
            line-height: 30px;
            background: #f5f5f5;
            padding: 0 18px;
            color: #9e9e9e;
            font-size: 0.9167em;
            font-weight: bold;
            text-align: center;
            margin: 0px;
            text-transform: uppercase;
        }
    </style>
{% endblock %}