{% extends ":Front:base.html.twig" %}
{% block title %}Language courses{% endblock %}
{% block body %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Languages courses</h2>
            </div>
        </div>
    </div>
    <section id="content">
        <div class="container">
            <div id="main">
                <div class="row">
                    {% include 'FrontGeneralBundle:LanguageCourses:filtre.html.twig' %}
                    <div class="col-sm-8 col-md-9">
                    {% include 'FrontGeneralBundle:LanguageCourses:sort.html.twig' %}
                        <div class="hotel-list listing-style3 hotel">
                            {% for school in schools %}
                            {% set stars= (school.note/5) *100 %}
                                <article class="box">
                                    <figure class="col-sm-5 col-md-4">
                                        <a title="" href="ajax/slideshow-popup.html" class="hover-effect popup-gallery">
                                            <img style="width: 270px;height: 160px" alt="" src="{{ school.image.getAssetPath | imagine_filter('list') }}">
                                        </a>
                                    </figure>
                                    <div class="details col-sm-7 col-md-8">
                                        <div>
                                            <div>
                                                <h4 class="box-title">{{ school.name|title }}<small><i class="soap-icon-departure yellow-color"></i>{{ school.city.country.code|upper }}, {{ school.city }}</small></h4>
                                                <div class="amenities">
                                                    <i class="soap-icon-wifi circle"></i>
                                                    <i class="soap-icon-fitnessfacility circle"></i>
                                                    <i class="soap-icon-fork circle"></i>
                                                    <i class="soap-icon-television circle"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="five-stars-container">
                                                    <span class="five-stars" style="width: {{ stars }}%;"></span>
                                                </div>
                                                <span class="review">{{ school.reviews }} reviews</span>
                                            </div>
                                        </div>
                                        <div>
                                            <p>{{ school.shortDescription }}</p>
                                            <div>
                                                <span class="price"><small>AVG/NIGHT</small>$620</span>
                                                <a class="button btn-small full-width text-center" title="" href="hotel-detailed.html">SELECT</a>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            {% endfor %}
                        </div>
                        <div class="navigation">
                            {{ knp_pagination_render(schools) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}